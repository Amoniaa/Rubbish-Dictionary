/*move*/
@keyframes movein {
  from {
    opacity: 0;
    transform: translateY(-90vw);
  }

  to {
    opacity: 1;
    transform: translateY(-10vw);
  }
}

@keyframes moveout {
  from {
    opacity: 1;
    transform: translateY(-10vw);
  }

  to {
    opacity: 0;
    transform: translateY(-110vw);
  }
}

.movein {
  animation: movein .5s ease-out forwards;
}

.moveout {
  animation: moveout .5s ease-out forwards;
