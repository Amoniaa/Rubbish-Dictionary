/*show*/
@keyframes showInfo {
  0% {
    opacity: 0;
    line-height: 10vh;
    transform: translateY(25vh);
  }

  100% {
    opacity: 1;
    line-height: 6vh;
    transform: translateY(0);
  }
}

@keyframes hideInfo {
  0% {
    opacity: 1;
    line-height: 6vh;
    transform: translateY(0);
  }

  100% {
    opacity: 0;
    line-height: 6vh;
    transform: translateY(0) scale(.2);
  }
}

.showInfo {
  animation: showInfo .8s ease-out forwards;
}

.hideInfo {
  animation: hideInfo .5s ease-out forwards;
}


@keyframes hideGuide {
