

/*indexblur*/
@keyframes showblur {
  0% {
  }

  100% {
    filter: blur(40rpx);
    transform: scale(1.2);
  }
}

@keyframes hideblur {
  0% {
    filter: blur(40rpx);
    transform: scale(1.2);
  }

  100% {
  }
}
.showblur {
  animation: showblur .5s ease-out forwards;
}

.hideblur {
  animation: hideblur .5s ease-out forwards;
}

/*container*/

@keyframes containerState1 {
  from {
    transform: translateY(-16vh);
    z-index: 2;
  }

  to {
    transform: translateY(-55vh);
    z-index: 999;
  }
}

@keyframes containerState0 {
  from {
    transform: translateY(-55vh);
    z-index: 999;
  }

  to {
    transform: translateY(-16vh);
    z-index: 2;
  }
}

.containerState1 {
  animation: containerState1 .5s ease-out forwards;
}

.containerState0 {
  animation: containerState0 .5s ease-out forwards;
}

/*logo*/
@keyframes logoState1 {
  from {
    opacity: 1;
    width: 20vh;
    height: 20vh;
    transform: translateY(0);
  }

  to {
    opacity: 0;
    width: 0;
    height: 0;
    transform: translateY(20vh);
  }
}

@keyframes logoState0 {
  from {
    opacity: 0;
    width: 0;
    height: 0;
    transform: translateY(20vh);
  }

  to {
    opacity: 1;
    width: 20vh;
    height: 20vh;
    transform: translateY(0);
  }
}

@keyframes rotate {
  0% {
    transform: rotate(0);
  }

  33% {
    transform: rotate(360deg);
  }

  66% {
    transform: rotate(360deg);
  }

  100% {
    transform: rotate(720deg);
  }
}

.logoState1 {
  animation: logoState1 .5s ease-out forwards;
}

.logoState0 {
  animation: logoState0 .5s ease-out forwards;
}

.rotate {
  animation: rotate 1.5s ease-out forwards;
}

